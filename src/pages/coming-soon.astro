---
import BaseHead from '../components/BaseHead.astro';
import Footer from '../components/sections/Footer.astro';
import Header from '../components/sections/Header.astro';
import { SITE_DESCRIPTION, SITE_TITLE } from '../consts';
import Button from '../components/ui/button/Button.astro';
---

<!doctype html>
<html lang="en" data-theme="dark" class="dark">
  <head>
    <BaseHead
      title={`Coming Soon - ${SITE_TITLE}`}
      description={SITE_DESCRIPTION}
    />
  </head>
  <body>
    <Header />
    <main class="use-utility-layout">
      <section class="flex min-h-[80vh] items-center justify-center py-12">
        <div class="mx-auto max-w-2xl px-4 text-center">
          <div class="mb-8">
            <h1
              class="text-foreground mb-4 text-4xl font-extrabold tracking-tight md:text-6xl"
            >
              <span
                class="bg-gradient-to-r from-[var(--accent)] to-[var(--accent-dark)] bg-clip-text text-transparent"
              >
                Coming Soon
              </span>
            </h1>
            <p
              class="mx-auto max-w-lg text-lg text-[color:var(--color-text-secondary)] md:text-xl"
            >
              This section is currently under development. Check back soon for
              exciting updates!
            </p>
          </div>

          <div class="card-surface mb-8 p-8">
            <div class="mb-6">
              <div
                class="mx-auto mb-4 flex size-16 items-center justify-center rounded-full bg-gradient-to-r from-[var(--accent)] to-[var(--accent-dark)] text-white"
              >
                <svg
                  class="size-8"
                  fill="none"
                  stroke="currentColor"
                  viewBox="0 0 24 24"
                >
                  <path
                    stroke-linecap="round"
                    stroke-linejoin="round"
                    stroke-width="2"
                    d="M12 8v4l3 3m6-3a9 9 0 11-18 0 9 9 0 0118 0z"></path>
                </svg>
              </div>
              <h2 class="text-foreground mb-3 text-2xl font-semibold">
                Stay Tuned
              </h2>
              <p class="text-[color:var(--color-text-muted)]">
                I'm working hard to bring you something amazing. This page will
                be available soon with all the content you're looking for.
              </p>
            </div>

            <div class="flex flex-col gap-3 sm:flex-row sm:justify-center">
              <Button href="/" variant="primary" size="md">
                ← Back to Home
              </Button>
              <Button href="/#contact" variant="secondary" size="md">
                Get Notified
              </Button>
            </div>
          </div>

          <div class="text-sm text-[color:var(--color-text-muted)]">
            Expected launch: Soon™
          </div>
        </div>
      </section>
    </main>
    <Footer />
  </body>
</html>
