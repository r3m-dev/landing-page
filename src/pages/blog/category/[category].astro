---
import { getCollection } from 'astro:content';
import BaseHead from '../../../components/BaseHead.astro';
import Header from '../../../components/sections/Header.astro';
import Footer from '../../../components/sections/Footer.astro';
import PostCard from '../../../components/ui/card/PostCard.astro';
import { getCategoryMeta, slugifyCategory } from '../../../data/categories';

export async function getStaticPaths() {
  const posts = await getCollection('blog');
  const categories = [
    ...new Set(
      posts
        .map((p) => p.data.category || null)
        .filter((v): v is string => Boolean(v))
        .map((name) => slugifyCategory(name)),
    ),
  ];
  return categories.map((category) => ({ params: { category } }));
}

const { category } = Astro.params;
const posts = (await getCollection('blog')).filter(
  (p) => slugifyCategory(p.data.category || '') === category,
);
const meta = getCategoryMeta(category);
---

<html lang="en" data-theme="dark" class="dark">
  <head>
    <BaseHead
      title={`${meta.title} - Category`}
      description={meta.description}
    />
    <link
      rel="alternate"
      type="application/rss+xml"
      title={`Category: ${category} feed`}
      href={`/rss/category/${category}.xml`}
    />
  </head>
  <body>
    <Header />
    <main class="mx-auto max-w-6xl space-y-6 px-4 py-10">
      <div class="flex items-center justify-between gap-3">
        <h1 class="text-3xl font-bold">{meta.title}</h1>
        <a class="sw-btn-sm" href={`/rss/category/${category}.xml`}>Subscribe</a
        >
      </div>
      <p class="text-[color:var(--color-text-muted)]">{meta.description}</p>
      <div class="blog-grid">
        {posts.map((p) => <PostCard post={p} />)}
      </div>
    </main>
    <Footer />
  </body>
</html>
