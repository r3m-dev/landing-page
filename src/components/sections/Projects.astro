---
import Button from '../ui/button/Button.astro';
import { projects } from '../../data/projects';

interface Props {
  title?: string;
}

const { title } = Astro.props as Props;
---

<section class="w-full py-10">
  <div class="mx-auto max-w-6xl px-4">
    {
      title && (
        <h2 class="text-foreground mb-8 text-center text-3xl font-semibold md:text-4xl">
          {title}
        </h2>
      )
    }

    <div class="grid grid-cols-1 gap-6 md:grid-cols-2">
      {
        projects.map((p) => (
          <article class="card-surface relative p-6">
            <div class="absolute top-4 right-4 text-[var(--accent)] [&>svg]:h-6 [&>svg]:w-6" />
            <h3 class="text-foreground m-0 text-xl font-semibold">{p.title}</h3>
            <p class="m-0 text-sm text-[color:var(--color-text-muted)]">
              {p.techStack}
            </p>
            <p class="mt-3 text-[color:var(--color-text-secondary)]">
              {p.description}
            </p>
            <div class="mt-6 flex justify-center">
              <Button href={p.ctaLink} variant="primary" size="sm">
                {p.ctaText}
              </Button>
            </div>
          </article>
        ))
      }
    </div>
  </div>
</section>
