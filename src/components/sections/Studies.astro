---
interface StudyItem {
  title: string;
  institution: string;
  description: string;
  tags?: string[];
}

interface Props {
  items: StudyItem[];
  title?: string;
}

const { items, title } = Astro.props as Props;
---

<section class="w-full py-8">
  <div class="mx-auto max-w-6xl px-4">
    {
      title && (
        <h2 class="text-foreground mb-6 text-center text-3xl font-semibold md:text-4xl">
          {title}
        </h2>
      )
    }

    <div class="mx-auto grid max-w-5xl grid-cols-1 gap-6 md:grid-cols-2">
      {
        items.map((study) => (
          <article class="card-surface p-6">
            <h3 class="text-foreground text-xl font-semibold">{study.title}</h3>
            <div class="mt-1 text-sm text-[color:var(--color-text-secondary)]">
              {study.institution}
            </div>
            <p class="mt-3 text-[color:var(--color-text-secondary)]">
              {study.description}
            </p>
            {study.tags && study.tags.length > 0 && (
              <div class="mt-4 flex flex-wrap gap-2">
                {study.tags.map((tag) => (
                  <span
                    class="inline-flex items-center rounded-full px-3 py-1 text-xs font-medium"
                    style="background: rgba(var(--accent-rgb),0.1); color: var(--accent); border: 1px solid rgba(var(--accent-rgb),0.3);"
                  >
                    {tag}
                  </span>
                ))}
              </div>
            )}
          </article>
        ))
      }
    </div>
  </div>
</section>
